{
  "name": "create-amala-app",
  "version": "1.2.7",
  "description": "An AmalaJS API",
  "bin": "bin/main.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "github"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
    "lint": "eslint .",
    "start": "node dist/index.js",
    "start:pm2": "npm_config_yes=true npx pm2 start dist/index.js --name api",
    "stop:pm2": "npx pm2 stop api",
    "lint:fix": "eslint --fix . --ext .ts"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "Iyobo Eki",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.338.0",
    "amala": "^8.5.7",
    "chance": "^1.1.11",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "jsonwebtoken": "^9.0.0",
    "koa-bearer-token": "^2.0.2",
    "koa-jwt": "^4.0.4",
    "ksuid": "^3.0.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.9.2",
    "reflect-metadata": "^0.1.13",
    "twilio": "^4.11.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.136",
    "@types/node": "18.16.14",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^24.8.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
